<div class="modal" id="edit-target-modal" aria-hidden="true">
  <div
    class="modal-card"
    role="dialog"
    aria-modal="true"
    aria-labelledby="edit-target-title"
  >
    <div class="modal-header">
      <h3 id="edit-target-title">Edit target name</h3>
      <button class="ghost" type="button" id="edit-target-close">Close</button>
    </div>
    <label>
      Name
      <input type="text" id="edit-target-input" required />
    </label>
    <div class="modal-actions">
      <button class="primary" type="button" id="edit-target-save">Save</button>
      <button class="ghost" type="button" id="edit-target-cancel">
        Cancel
      </button>
    </div>
  </div>
</div>
