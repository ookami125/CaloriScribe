<div class="modal" id="confirm-modal" aria-hidden="true">
  <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="confirm-title">
    <div class="modal-header">
      <h3 id="confirm-title">Confirm action</h3>
      <button class="ghost" type="button" id="confirm-close">Close</button>
    </div>
    <p class="meta" id="confirm-message">Are you sure you want to continue?</p>
    <div class="modal-actions">
      <button class="primary" type="button" id="confirm-accept">Confirm</button>
      <button class="ghost" type="button" id="confirm-cancel">Cancel</button>
    </div>
  </div>
</div>
