doctype html
html(lang="en")
  include partials/head
  body
    .ambient
    include partials/header

    main.page
      section.panel
        .panel-header
          div
            h1 Settings
            p Manage targets, data tools, and security.
        .panel-body.single
          .stacked-card
            form#target-form.stacked-section
              h3 Targets
              .grid.two.custom-target-inputs#custom-target-list
              p.meta Add a + to allow overage (for example, 2000+).
              button.primary(type="submit") Save
              p.form-status#target-status

            form#custom-target-form.stacked-section
              p.meta Track extra nutrients or re-add any removed targets.
              .grid.two
                label
                  | Nutrient
                  select#custom-target-key(name="key")
              .form-actions
                button.primary#custom-target-submit(type="submit") Add
              p.form-status#custom-target-status

          .stacked-card
            h3 Data tools
            p.meta Export your data or import a previous backup.
            .actions
              button.ghost#export-button(type="button") Export data
              button.ghost#import-button(type="button") Import data
              input#import-file(type="file" accept="application/json" hidden)
            p.form-status#import-status

          form#password-form.stacked-card
            h3 Change password
            label
              | Current password
              input(type="password" name="oldPassword" autocomplete="current-password" required)
            label
              | New password
              input(type="password" name="newPassword" autocomplete="new-password" required)
            label
              | Confirm new password
              input(type="password" name="confirmPassword" autocomplete="new-password" required)
            button.primary(type="submit") Update password
            p.form-status#password-status

    include partials/confirm-modal
    include partials/edit-target-modal

    script(src="/app.js")
