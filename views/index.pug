doctype html
html(lang="en")
  include partials/head
  body
    .ambient
    include partials/header

    main.page
      section.panel.hero
        .panel-header
          div
            p.eyebrow Day view
            h1 Daily overview
            p.subtitle
              | Track calories and macros at a glance, then dive into details when
              | you need them.
          .hero-actions
            .date-controls
              button.ghost.day-nav(type="button" data-day-action="prev" aria-label="Previous day") Prev
              label.date-picker
                | Day
                input(type="date" id="day-selector" data-day-input)
              button.ghost.day-nav(type="button" data-day-action="next" aria-label="Next day") Next
              button.ghost(type="button" data-day-action="today") Today
            a.primary.button-link(href="/ingredients") Add ingredient
            a.ghost.button-link(href="/log") Log intake
            a.ghost.button-link(href="/settings") Edit targets
        .hero-grid
          include partials/calories-panel
          include partials/macro-split-panel
          .stat-card
            span.eyebrow Quick actions
            .stack
              a.ghost.button-link(href="/ingredients") Scan or lookup
              a.ghost.button-link(href="/recipes") Build recipe
              a.ghost.button-link(href="/log") Log meal

      section.panel
        .panel-header
          div
            h2 Recent intake
            p Most recent entries for the selected day.
          a.ghost.button-link(href="/log") View all logs
        .list#log-list

    footer.footer
      p All data is stored in your connected database. SQLite is default.

    include partials/card-templates
    include partials/confirm-modal

    script(src="/app.js")
